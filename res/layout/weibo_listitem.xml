<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="?android:attr/listPreferredItemHeight"
	android:background="@drawable/timeback">

	<ImageView android:id="@+id/listheader" android:layout_width="75dip"
		android:layout_height="fill_parent" android:layout_marginRight="5dip"
		android:background="@drawable/listitemheader" android:text="01"
		android:textSize="25sp"  android:scaleType="fitXY" android:textColor="@color/white" />
	<LinearLayout android:orientation="vertical"
		android:layout_width="0dip" android:layout_weight="1"
		android:layout_height="fill_parent" android:padding="2dip">

		<TextView android:layout_width="fill_parent"
			android:ellipsize="marquee" android:layout_height="0dip"
			android:layout_weight="2" android:id="@+id/wayinfo" android:gravity="center_vertical"
			android:textSize="15sp" android:textColor="@color/black" />

		<TextView android:layout_width="fill_parent"
			android:ellipsize="marquee" android:layout_height="0dip"
			android:layout_weight="1" android:id="@+id/wayinfoDetail"
			android:singleLine="true" android:textColor="@color/black" />
		
		<TextView android:layout_width="0dip" android:layout_height="0dip"
			android:layout_weight="0" android:id="@+id/picDetail" android:visibility="invisible"/>

	</LinearLayout>


</LinearLayout>